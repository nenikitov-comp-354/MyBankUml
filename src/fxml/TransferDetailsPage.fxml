<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.HPos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bank.controllers.TransactionsController">
    <children>
        <Text layoutX="25.0" layoutY="63.0" text="Review Transfer Details">
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Text>
        <GridPane layoutX="50.0" layoutY="100.0" prefHeight="260.0" prefWidth="400.0" styleClass="card" stylesheets="@../stylesheets/userPage.css">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" prefWidth="150.0" />
                <ColumnConstraints halignment="RIGHT" prefWidth="250.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="45.0" />
                <RowConstraints prefHeight="45.0" />
                <RowConstraints prefHeight="45.0" />
                <RowConstraints prefHeight="45.0" />
                <RowConstraints prefHeight="80.0" />
            </rowConstraints>
            <children>
                <Text text="Transfer From:" GridPane.rowIndex="0" GridPane.columnIndex="0">
                    <font><Font size="16.0" /></font>
                </Text>
                <Text fx:id="transferFromText" text="Checking Account" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Text>
                <Text text="Transfer To:" GridPane.rowIndex="1" GridPane.columnIndex="0">
                    <font><Font size="16.0" /></font>
                </Text>
                <Text fx:id="transferToText" text="Savings Account/recipient" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Text>
                <Text text="Bank:" GridPane.rowIndex="2" GridPane.columnIndex="0">
                    <font><Font size="16.0" /></font>
                </Text>
                <Text fx:id="bankNameText" text="Bank Name" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Text>
                <Text text="Amount:" GridPane.rowIndex="3" GridPane.columnIndex="0">
                    <font><Font size="16.0" /></font>
                </Text>
                <Text fx:id="amountText" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Text>
                <HBox spacing="20" alignment="CENTER" GridPane.rowIndex="4" GridPane.columnSpan="2">
                    <children>
                        <Button fx:id="confirmButton" text="Confirm">
                            <font><Font name="System Bold" size="12.0" /></font>
                        </Button>
                        <Button fx:id="cancelButton" text="Cancel">
                            <font><Font name="System Bold" size="12.0" /></font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </GridPane>
    </children>
</AnchorPane>
