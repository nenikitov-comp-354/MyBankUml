<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bank.controllers.TransactionsController" stylesheets="@../stylesheets/transaction.css">
    <children>
        <Text layoutX="25.0" layoutY="50.0" text="Send Money to a Contact">
            <font><Font name="System Bold" size="30.0" /></font>
        </Text>
        <TextField fx:id="searchInput" promptText="Search Contact" styleClass="input"
                   layoutX="50.0" layoutY="90.0" prefWidth="400.0"/>
        <VBox layoutX="50.0" layoutY="140.0" spacing="10" prefWidth="400.0">
            <children>
            <Text layoutX="25.0" layoutY="50.0" text="Your Contacts:">
            <font><Font name="System Bold" size="20.0" /></font>
            </Text>
                <Button text="Contact 1 name" styleClass="contact-button" maxWidth="Infinity"/>
                <Button text="Contact 2 name" styleClass="contact-button" maxWidth="Infinity"/>
            </children>
        </VBox>
        <HBox alignment="CENTER" prefWidth="400.0"
              AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="50.0">
            <children>
                <Button fx:id="cancelButtonContact" text="Cancel" styleClass="button" prefHeight="25.0" prefWidth="95.0" onAction ="#handleCancelContact">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Button>
            </children>
        </HBox>
    </children>
</AnchorPane>

